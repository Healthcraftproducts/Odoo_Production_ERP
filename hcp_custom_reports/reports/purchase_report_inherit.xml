<br><table class="gfg" width="100%">
                <thead>
                    <tr>
                        <th style="width: 10%; text-align: left;" class="text-left"><strong>Line</strong></th>
                        <th style="width: 10%; text-align: left;" class="text-left"><strong>Due Date</strong></th>
                        <th style="width: 10%; text-align: left;" class="text-left"><strong>Item number</strong></th>
                        <th style="width: 30%; text-align: left;" class="text-left"><strong>Description</strong></th>
                        <th style="width: 10%; text-align: right;" class="text-right"><strong>Quantity</strong></th>
                        <th style="width: 10%; text-align: left;" class="text-left"><strong>UOM</strong></th>
                        <th style="width: 10%; text-align: right;" class="text-right"><strong>Price</strong></th>
                        <th style="width: 10%; text-align: right;" class="text-right"><strong>Extension</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-foreach="o.order_line" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''"
                          style="border-left:none; border-bottom:none; border-top:none;">
                            <t t-if="not line.display_type">
                              <td style="text-align: left; border-left:none; border-bottom:none; border-top:none; width: 10%; padding-top: 3%;padding-bottom: 3%;" class="text-left">  <span t-esc="line_index+1"></span></td>

                              <td style="text-align: left; border-left:none; border-bottom:none; border-top:none; width: 10%; padding-top: 3%;padding-bottom: 3%;" class="text-left">  <span t-field="line.date_planned" t-options='{"format": "MM/dd/yyyy"}'/></td>

                              <td style="text-align: left; border-left:none; border-bottom:none; border-top:none; width: 10%; padding-top: 3%;padding-bottom: 3%;" class="text-left">  <span t-field="line.product_id.default_code"/></td>

                                <td style="text-align: left; border-left:none; border-bottom:none; border-top:none; width:30%; padding-top: 3%;padding-bottom: 3%;" class="text-left">
                                    <span t-field="line.name"/>
                                </td>

                                <td style="text-align: right; border-left:none; border-bottom:none; border-top:none; width: 10%; padding-top: 3%;padding-bottom: 3%;" class="text-right">
                                    <span t-field="line.product_qty"/>
                                </td>

                                 <td style="text-align: left; border-left:none; border-bottom:none; border-top:none; width: 10%; padding-top: 3%;padding-bottom: 3%;" class="text-left">
                                    <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                </td>

                                <td style="text-align: right; border-left:none; border-bottom:none; border-top:none; width: 10%; padding-top: 3%;padding-bottom: 3%;" class="text-right">
                                    <span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>

                                <td style="text-align: right; border-left:none; border-bottom:none; border-top:none; width: 10%; padding-top: 3%;padding-bottom: 3%;" class="text-right">
                                    <span t-field="line.price_subtotal"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                                <!-- <td name="td_taxes">
                                    <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                                </td> -->
                                <!-- <td class="text-center">
                                    <span t-field="line.date_planned"/>
                                </td> -->
                                <!-- <td class="text-right">
                                    <span t-field="line.product_qty"/>
                                    <span t-field="line.product_uom.name" groups="uom.group_uom"/>
