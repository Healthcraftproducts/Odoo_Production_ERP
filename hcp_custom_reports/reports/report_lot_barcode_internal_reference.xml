<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
                string="Lot/Serial Number 80*40"
                id="action_report_lot_serial_label_internal_reference"
                model="stock.lot"
                report_type="qweb-pdf"
                name="hcp_custom_reports.report_lot_serial_label_internal_reference"
                file="hcp_custom_reports.report_lot_serial_label_internal_reference"
                print_report_name="'Lot-Serial - %s' % object.name"
        />

        <record id="report_lot_serial_internal_reference_paperformat" model="report.paperformat">
            <field name="name">Paper Format Lot/Serial 80*40</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">40</field>
            <field name="page_width">85</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">1.00</field>
            <field name="margin_bottom">0.50</field>
            <field name="margin_left">0.70</field>
            <field name="margin_right">0.70</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">1</field>
            <field name="dpi">90</field>
            <field name="report_ids"
                   eval="[(4,ref('hcp_custom_reports.action_report_lot_serial_label_internal_reference'))]"/>
        </record>

        <template id="report_lot_serial_label_internal_reference">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div>
                            <div style="padding-top:5px;">
                                <p style="font-size: 30px;">
                                    <b>
                                        <span t-field="o.product_id.display_name"/>
                                    </b>
                                </p>
                            </div>
                            <hr style="border: 1px solid grey; border-radius: 1em; background-color: gray;"/>
                            <div>
                                <p style="font-size: 25px; text-align:left ; padding-top:2px">
                                    <b>LN/SN:
                                        <span t-esc="o.name"/>
                                    </b>
                                </p>
                            </div>
                            <div>
                                <div>
                                    <div t-esc="o.name"
                                         t-options="{'widget': 'barcode', 'width': 600, 'height': 75}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="page-break-before:always;"></div>
                </t>
            </t>
        </template>
    </data>
</odoo>
