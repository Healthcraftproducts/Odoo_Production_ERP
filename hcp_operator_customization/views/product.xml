    <record id="view_repair_order_form_new_ext" model="ir.ui.view">
        <field name="name">repair.form.new.ext</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id'][1]" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True}</attribute>
            </xpath>
            <xpath expr="/form/sheet/notebook/page/field/tree//field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_quick_create': True, 'no_create_edit' : True}</attribute>
            </xpath>
            <xpath expr="//page[@name='operations']" position="replace">
                <page string="Operations" name="operations">
                    <field name="fees_lines" context="{'default_company_id': company_id}"
                           attrs="{'readonly':[('state', 'in', ['done', 'cancel'])]}">
                        <form string="Fees">
                            <group>
                                <field name="company_id" invisible="1" force_save="1"/>
                                <field name="product_id" required="True"/>
                                <field name="name"/>
                                <field name="product_uom_category_id" invisible="1"/>
                                <label for="product_uom_qty"/>
                                <div class="o_row">
                                    <field name="product_uom_qty" string="Quantity"/>
                                    <field name="product_uom" groups="uom.group_uom"/>
                                </div>
                                <field name="price_unit"/>
                                <field widget="many2many_tags" name="tax_id"/>
                                <field name="price_subtotal" widget="monetary" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </form>
                        <tree string="Fees" editable="bottom">
                            <field name="company_id" invisible="1" force_save="1"/>
                            <field name="product_id" required="True" context="{'default_type': 'service'}"
                                   options="{'no_create': True, 'no_create_edit' : True}"/>
                            <field name='name' optional="show"/>
                            <field name="product_uom_qty" string="Quantity"/>
                            <field name="product_uom_category_id" invisible="1"/>
                            <field name="product_uom" string="Unit of Measure" groups="uom.group_uom" optional="show"/>
                            <field name="price_unit"/>
                            <field name="tax_id" widget="many2many_tags" optional="show"/>
                            <field name="price_subtotal" widget="monetary"
                                   groups="account.group_show_line_subtotals_tax_excluded"/>
                            <field name="price_total" widget="monetary"
                                   groups="account.group_show_line_subtotals_tax_included"/>
                            <field name="currency_id" invisible="1"/>
                        </tree>
                    </field>
                </page>

            </xpath>
        </field>
    </record>
    <record id="product_template_only_form_view_product_ext" model="ir.ui.view">
        <field name="name">product.template.only.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']" position="replace">
                <page string="Sales" name="sales"
                      modifiers="{&quot;invisible&quot;: [[&quot;sale_ok&quot;, &quot;=&quot;, false]]}">
                    <group name="sale">
                        <group string="Upsell &amp; Cross-Sell" name="upsell">
                            <field name="optional_product_ids" widget="many2many_tags"
                                   options="{'color_field': 'color','no_create': True, 'no_create_edit' : True}"
                                   domain="[('id', '!=', active_id), '|', ('company_id', '=', company_id), ('company_id', '=', False)]"
                                   placeholder="Recommend when 'Adding to Cart' or quotation" can_create="true"
                                   can_write="true"/>
                            <field name="accessory_product_ids" widget="many2many_tags"
                                   placeholder="Suggested accessories in the eCommerce cart"
                                   options="{'no_create': True, 'no_create_edit' : True}"
                                   modifiers="{&quot;invisible&quot;: [[&quot;sale_ok&quot;, &quot;=&quot;, false]]}"
                                   can_create="true"
                                   can_write="true"/>
                            <field name="alternative_product_ids" widget="many2many_tags"
                                   domain="[('id', '!=', active_id), '|', ('company_id', '=', company_id), ('company_id', '=', False)]"
                                   placeholder="Displayed in bottom of product pages"
                                   options="{'no_create': True, 'no_create_edit' : True}"
                                   modifiers="{&quot;invisible&quot;: [[&quot;sale_ok&quot;, &quot;=&quot;, false]]}"
                                   can_create="true"
                                   can_write="true"/>
                        </group>
                        <group string="eCommerce Shop" name="shop"
                               modifiers="{&quot;invisible&quot;: [[&quot;sale_ok&quot;, &quot;=&quot;, false]]}">
                            <field name="website_url" modifiers="{&quot;readonly&quot;: true}"/>
                            <field name="website_id" options="{'no_create': True}" on_change="1" can_create="true"
                                   can_write="true"/>
                            <field name="website_sequence"/>
                            <field name="rating_avg" modifiers="{&quot;readonly&quot;: true}"/>
                            <field name="website_description"/>
                            <field name="website_published"/>
                            <field name="website_meta_keywords"/>
                            <field name="can_image_1024_be_zoomed" modifiers="{&quot;readonly&quot;: true}"/>
                            <field name="public_categ_ids" widget="many2many_tags" string="Categories" can_create="true"
                                   can_write="true"/>
                            <label for="allow_out_of_stock_order" string="Out-of-Stock"
                                   modifiers="{&quot;invisible&quot;: [[&quot;type&quot;, &quot;in&quot;, [&quot;service&quot;, &quot;consu&quot;]]]}"/>
                            <div modifiers="{&quot;invisible&quot;: [[&quot;type&quot;, &quot;in&quot;, [&quot;service&quot;, &quot;consu&quot;]]]}">
                                <field name="allow_out_of_stock_order" class="oe_inline"/>
                                Continue Selling
                            </div>

                            <label for="show_availability" string="Show Available Qty"
                                   modifiers="{&quot;invisible&quot;: [[&quot;type&quot;, &quot;in&quot;, [&quot;service&quot;, &quot;consu&quot;]]]}"/>
                            <div modifiers="{&quot;invisible&quot;: [[&quot;type&quot;, &quot;in&quot;, [&quot;service&quot;, &quot;consu&quot;]]]}">
                                <field name="show_availability" class="oe_inline"/>
                                <span modifiers="{&quot;invisible&quot;: [[&quot;show_availability&quot;, &quot;=&quot;, false]]}">
                                    <label for="available_threshold" string="only if below" class="o_light_label"/>
                                    <field name="available_threshold" class="oe_inline col-1" widget="integer"/>
                                    Units
                                </span>
                            </div>
                            <field name="out_of_stock_message"
                                   modifiers="{&quot;invisible&quot;: [[&quot;type&quot;, &quot;in&quot;, [&quot;service&quot;, &quot;consu&quot;]]]}"/>
                            <field name="website_ribbon_id" options="{'no_quick_create': True}" can_create="true"
                                   can_write="true"/>
                        </group>
                        <group name="product_template_images" string="Extra Product Media"
                               modifiers="{&quot;invisible&quot;: [[&quot;sale_ok&quot;, &quot;=&quot;, false]]}">
                            <field name="product_template_image_ids" class="o_website_sale_image_list"
                                   context="{'default_name': name}"
                                   mode="kanban" add-label="Add a Media" nolabel="1">
                                <kanban string="Product Images" default_order="sequence">
                                    <field name="id" modifiers="{&quot;readonly&quot;: true}"/>
                                    <field name="name" modifiers="{&quot;required&quot;: true}"/>
                                    <field name="image_1920"/>
                                    <field name="sequence" widget="handle"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="card oe_kanban_global_click p-0">
                                                <div class="o_squared_image">
                                                    <img class="card-img-top"
                                                         t-att-src="kanban_image('product.image', 'image_1920', record.id.raw_value)"
                                                         t-att-alt="record.name.value"/>
                                                </div>
                                                <div class="card-body p-0">
                                                    <h4 class="card-title p-2 m-0 bg-200">
                                                        <small>
                                                            <field name="name"
                                                                   modifiers="{&quot;required&quot;: true}"/>
                                                        </small>
                                                    </h4>
                                                </div>
                                                <!-- below 100 Kb: good -->
                                                <t t-if="record.image_1920.raw_value.length &lt; 100*1000">
                                                    <t t-set="size_status" t-value="'text-bg-success'"/>
                                                    <t t-set="message">Acceptable file size</t>
                                                </t>
                                                <!-- below 1000 Kb: decent -->
                                                <t t-elif="record.image_1920.raw_value.length &lt; 1000*1000">
                                                    <t t-set="size_status" t-value="'text-bg-warning'"/>
                                                    <t t-set="message">Huge file size. The image should be
                                                        optimized/reduced.
                                                    </t>
                                                </t>
                                                <!-- above 1000 Kb: bad -->
                                                <t t-else="1">
                                                    <t t-set="size_status" t-value="'text-bg-danger'"/>
                                                    <t t-set="message">Optimization required! Reduce the image size or
                                                        increase your
                                                        compression settings.
                                                    </t>
                                                </t>
                                                <span t-attf-class="badge #{size_status} o_product_image_size"
                                                      t-esc="record.image_1920.value" t-att-title="message"/>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </group>
                    </group>
                    <group>
                        <group string="Sales Description" name="description">
                            <field colspan="2" name="description_sale" nolabel="1"
                                   placeholder="This note is added to sales orders and invoices."/>
                        </group>
                    </group>
                </page>

            </xpath>
        </field>
    </record>
