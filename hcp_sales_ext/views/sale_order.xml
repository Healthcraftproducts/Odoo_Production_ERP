<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_sale_order_customer_internal_notes" model="ir.ui.view">
        <field name="name">sale.order.customer.internal.notes</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page name="customer_internal_notes" string="Customer Internal Notes">
                   <field name="comment_internal_notes"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>