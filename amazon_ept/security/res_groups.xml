               eval="[(4,ref('amazon_ept.group_amazon_user_ept')),(4,ref('stock.group_stock_manager')),(4,ref('sales_team.group_sale_manager'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]"/>
    </record>

