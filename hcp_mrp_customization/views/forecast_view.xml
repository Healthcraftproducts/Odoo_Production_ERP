<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
       
        <menuitem id="mrp_forecast_main_menu"
            name="Forecast Planning"
            parent="mrp.menu_mrp_root"
            sequence="30"/>

        <menuitem
            id="mrp_mps.mrp_mps_report_menu"
            name="MPS Forecast"
            action="mrp_mps.action_mrp_mps"
            groups="mrp.group_mrp_manager"
            sequence="1"
            parent="mrp_forecast_main_menu"/>

        <menuitem id="menu_forecast_inventory_mrp" 
            name="Forecast Report" 
            parent="mrp_forecast_main_menu"
            sequence="2" 
            action="stock.report_stock_quantity_action"/>

        <template id="mrp_mps_inherited_qweb" name="extended MPS" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/hcp_mrp_customization/static/src/js/qweb_template.js"></script>
            </xpath>
        </template>

    </data>
</odoo>

