    <record id="product_template_form_inherit_id" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
            

                <xpath expr="//form/header" position='inside'>

                    <button name ="active_stage" string="Active" type="object" attrs="{'invisible': [('status','in',('0'))]}"/>
                    <button name ="inactive_stage" string="In Active" type="object" attrs="{'invisible': [('status','=','1')]}"/>
