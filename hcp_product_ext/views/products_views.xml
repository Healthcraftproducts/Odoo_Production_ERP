    <record id="product_template_search_view_id" model="ir.ui.view">
        <field name="name">product.template.search</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>               
        <field name="arch" type="xml">

            <xpath expr="//search/field[@name='name']" position="replace">
                <field name="name" string="Product Description" filter_domain="['|', '|', '|', ('default_code', 'ilike', self), ('product_variant_ids.default_code', 'ilike', self),('name', 'ilike', self), ('barcode', 'ilike', self)]"/>
            </xpath>

            <xpath expr="//search/field[@name='categ_id']" position="replace">
                    <field name="categ_id" string="Accounting Category" filter_domain="[('categ_id', 'child_of', raw_value)]"/>

            </xpath>
            <xpath expr="//search" position="inside">
                <field name="product_categ_id" string="Product Category" filter_domain="[('product_categ_id', 'ilike', self)]"/>
                <field name="product_sub_categ_id" string="Sub Product Category" filter_domain="[('product_sub_categ_id', 'ilike', self)]"/>
                <field name="default_code" string="Item Code" filter_domain="[('default_code', 'ilike', self)]"/>

            </xpath>

            <xpath expr="//search/group" position="inside">
                <filter string="Product Category" name="product_categ_id" context="{'group_by':'product_categ_id'}"/>
                <filter string="Product Sub Category" name="product_sub_categ_id" context="{'group_by':'product_sub_categ_id'}"/>
                <filter string="Status" name="status" context="{'group_by':'status'}"/>
            </xpath>

            <xpath expr="//search/group/filter[@name='categ_id']" position="replace">
                <filter string="Accounting Category" name="categ_id" context="{'group_by':'categ_id'}"/>
            </xpath>

        </field>
    </record>

    
    <record id="product_form_inherit_id" model="ir.ui.view">
            <field name="name">product.template.common.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
