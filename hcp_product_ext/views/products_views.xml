    <!--    new barcode-->
    <template id="report_simple_barcode">
        <div style="display:flex;">
            <div class="table table-bordered mb-0" style="border: 2px solid black;">
                <div class="table-active text-left" style="padding: 20px 10px;">
                    <strong t-field="product.display_name"/>
                </div>

                <div class="text-center align-middle" style="padding: 30px 0;">
                    <t t-if="product.barcode">
                        <div t-field="product.barcode"
                             t-options="{'widget': 'barcode', 'humanreadable': 1,'width': 300, 'height': 75}"/>
                    </t>
                    <t t-else="">
                        <span class="text-muted">No Barcode Available</span>
                    </t>
                </div>
            </div>

            <div t-if="product.image_1920" style="display: flex;align-items: center;justify-content: center;border: 2px solid;padding: 10px;">
                <t t-if="product.image_1920">
                    <img t-att-src="image_data_uri(product.image_1920)" alt="Product Image"
                         style="max-height: 100px; max-width: 100px;"/>
                </t>
                <t t-else="">
                    <span class="text-muted">No Image Available</span>
                </t>
            </div>
        </div>
    </template>

    <template id="report_productbarcode">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-foreach="docs" t-as="product">
                    <t t-call="hcp_product_ext.report_simple_barcode">
                        <t t-set="product" t-value="product"/>
                    </t>
                </t>
            </div>
        </t>
    </template>

